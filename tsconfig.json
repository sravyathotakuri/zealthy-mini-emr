{
  "compilerOptions": {
    "target": "ES2020",

    "lib": ["dom", "dom.iterable", "esnext"],

    "allowJs": true,

    "skipLibCheck": true,

    "strict": true,

    "forceConsistentCasingInFileNames": true,

    "noEmit": true,

    "esModuleInterop": true,

    "module": "ESNext",

    "moduleResolution": "bundler",

    "resolveJsonModule": true,

    "isolatedModules": true,

    "jsx": "preserve",

    "incremental": true,

    "types": ["node"],


    "paths": {
      "@/*": ["./*"]
    },

    "plugins": [{ "name": "next" }]
  },
  "include": [

    "next-env.d.ts",

    "**/*.ts",

    "**/*.tsx",

    "lib/**/*.ts",

    "prisma/**/*.ts",

    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]

}
